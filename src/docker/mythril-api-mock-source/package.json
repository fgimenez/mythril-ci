{
  "name": "mythril_api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "dev": "better-npm-run dev",
    "dev:worker": "better-npm-run dev:worker",
    "start": "better-npm-run start",
    "worker": "better-npm-run worker",
    "jest": "better-npm-run jest -i",
    "test": "npm run lint && better-npm-run jest -i --coverage"
  },
  "engines": {
    "node": "8.9"
  },
  "betterScripts": {
    "dev": {
      "command": "nodemon --exec 'node -r babel-register src/app | bunyan -o short -l trace'",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "dev:worker": {
      "command": "nodemon --exec 'node -r babel-register src/worker | bunyan -o short -l trace'",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "start": {
      "command": "node -r babel-register src/app",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "worker": {
      "command": "node -r babel-register src/worker",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "jest": {
      "command": "jest",
      "env": {
        "NODE_ENV": "test",
        "TZ": "Europe/London"
      }
    }
  },
  "devDependencies": {
    "babel-eslint": "^8.0.1",
    "eslint-config-topcoder": "^2.0.0",
    "eslint-plugin-babel": "^4.1.2",
    "jest": "^22.1.4",
    "nodemon": "^1.14.6"
  },
  "dependencies": {
    "amqplib": "^0.5.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "better-npm-run": "^0.1.0",
    "body-parser": "^1.18.2",
    "bunyan": "^1.8.12",
    "config": "^1.29.0",
    "cors": "^2.8.4",
    "decorate-it": "^2.2.0",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "express-api-error-handler": "^1.1.0",
    "express-domain-middleware": "^0.1.0",
    "express-wrap-async": "^1.0.3",
    "http-errors": "^1.6.2",
    "http-status-codes": "^1.3.0",
    "joi": "^11.3.4",
    "lodash": "^4.17.4",
    "mongoose": "^4.10.8",
    "mz": "^2.7.0",
    "uuid": "^3.2.1"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/src/bootstrap.js"
    ]
  }
}
